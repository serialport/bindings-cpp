{
  "extends": [
    "config:base"
  ],
  "prHourlyLimit": 0,
  "prConcurrentLimit": 20,
  "timezone": "America/New_York",
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchPackagePatterns": [
        "eslint",
        "@types",
        "esbuild",
        "sinon",
        "chai",
        "mocha",
        "nyc",
        "cc"
      ],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
